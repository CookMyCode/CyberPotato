<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/message_access_BG"
        android:layout_width="1010px"
        android:layout_height="650px"
        android:layout_marginTop="200px"
        android:background="@color/colorButtonNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/message_access_Title"
        android:layout_width="650px"
        android:layout_height="205px"
        android:background="@null"
        android:src="@drawable/message_access_title"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/message_access_BG"
        app:layout_constraintLeft_toLeftOf="@+id/message_access_BG"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginStart="30px" />
    <ImageButton
        android:id="@+id/message_access_CloseButton"
        android:layout_width="170px"
        android:layout_height="170px"
        android:scaleType="centerCrop"
        android:src="@drawable/close_button"
        android:background="@drawable/button_selector"
        app:layout_constraintTop_toTopOf="@+id/message_access_BG"
        app:layout_constraintRight_toRightOf="@+id/message_access_BG"
        android:layout_marginTop="50px"
        android:layout_marginRight="50px"
        android:layout_marginEnd="50px" />
    <TextView
        android:id="@+id/message_access_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Time: 19:36"
        android:textSize="80px"
        android:textColor="@color/colorHighLight"
        app:layout_constraintLeft_toLeftOf="@+id/message_access_BG"
        app:layout_constraintTop_toBottomOf="@+id/message_access_Title"
        android:layout_marginTop="80px"
        android:layout_marginLeft="40px"
        android:layout_marginStart="40px"/>
    <TextView
        android:id="@+id/message_access_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="IP: 192.168.137.111.111"
        android:textSize="80px"
        android:textColor="@color/colorHighLight"
        app:layout_constraintLeft_toLeftOf="@+id/message_access_BG"
        app:layout_constraintTop_toBottomOf="@+id/message_access_Time"
        android:layout_marginTop="65px"
        android:layout_marginLeft="40px"
        android:layout_marginStart="40px"/>
    <ImageButton
        android:id="@+id/message_access_PermitButton"
        android:layout_width="1010px"
        android:layout_height="210px"
        android:src="@drawable/permit_button"
        android:scaleType="centerCrop"
        android:background="@drawable/button_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_access_BG"
        android:layout_marginTop="15px"/>
    <ImageButton
        android:id="@+id/message_access_RefuseButton"
        android:layout_width="1010px"
        android:layout_height="210px"
        android:src="@drawable/refuse_button"
        android:scaleType="centerCrop"
        android:background="@drawable/button_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_access_PermitButton"
        android:layout_marginTop="15px"/>
</android.support.constraint.ConstraintLayout>