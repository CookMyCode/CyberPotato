<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/storage_BG"
        android:layout_width="1010px"
        android:layout_height="1415px"
        android:layout_marginTop="200px"
        android:background="@color/colorButtonNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/storage_Title"
            android:layout_width="650px"
            android:layout_height="205px"
            android:background="@null"
            android:src="@drawable/storage_title"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/storage_BG"
            app:layout_constraintLeft_toLeftOf="@+id/storage_BG"
            android:layout_marginTop="15px"
            android:layout_marginLeft="15px"
            android:layout_marginStart="15px"/>
        <ImageButton
            android:id="@+id/storage_CloseButton"
            android:layout_width="170px"
            android:layout_height="170px"
            android:scaleType="centerCrop"
            android:src="@drawable/close_button"
            android:background="@drawable/button_selector"
            app:layout_constraintTop_toTopOf="@+id/storage_BG"
            app:layout_constraintRight_toRightOf="@+id/storage_BG"
            android:layout_marginTop="38px"
            android:layout_marginRight="40px"
            android:layout_marginEnd="40px" />
        <ListView
            android:id="@+id/storage_public_ScrollView"
            android:layout_width="895px"
            android:layout_height="900px"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@+id/storage_Title"
            app:layout_constraintLeft_toLeftOf="@+id/storage_BG"
            app:layout_constraintRight_toRightOf="@+id/storage_BG"
            android:layout_marginTop="70px"/>
        <ImageButton
            android:id="@+id/storage_public_SelectFile"
            android:layout_width="117px"
            android:layout_height="117px"
            android:src="@drawable/add_files"
            android:scaleType="centerInside"
            android:background="@drawable/button_selector"
            app:layout_constraintRight_toRightOf="@+id/storage_public_ScrollView"
            app:layout_constraintTop_toTopOf="@+id/storage_public_ScrollView"
            android:layout_marginTop="30px"
            android:layout_marginRight="20px"/>
        <ListView
            android:visibility="gone"
            android:id="@+id/storage_receive_ScrollView"
            android:layout_width="895px"
            android:layout_height="900px"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@+id/storage_Title"
            app:layout_constraintLeft_toLeftOf="@+id/storage_BG"
            app:layout_constraintRight_toRightOf="@+id/storage_BG"
            android:layout_marginTop="70px"/>
        <ImageButton
            android:id="@+id/storage_public_ChangeFileListButton"
            android:tag="receiveFileListButton"
            android:layout_width="140px"
            android:layout_height="144px"
            android:src="@drawable/receive_file_list_button"
            android:scaleType="centerInside"
            android:background="@drawable/button_selector"
            app:layout_constraintLeft_toLeftOf="@+id/storage_BG"
            app:layout_constraintBottom_toBottomOf="@+id/storage_BG"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="80px"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/select_BG"
        android:layout_width="1010px"
        android:layout_height="1415px"
        android:layout_marginTop="200px"
        android:background="@color/colorButtonNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/select_Title"
            android:layout_width="650px"
            android:layout_height="205px"
            android:background="@null"
            android:src="@drawable/select_title"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/select_BG"
            app:layout_constraintLeft_toLeftOf="@+id/select_BG"
            android:layout_marginTop="15px"
            android:layout_marginLeft="15px"
            android:layout_marginStart="15px"/>
        <ImageButton
            android:id="@+id/select_CloseButton"
            android:layout_width="170px"
            android:layout_height="170px"
            android:scaleType="centerCrop"
            android:src="@drawable/close_button"
            android:background="@drawable/button_selector"
            app:layout_constraintTop_toTopOf="@+id/select_BG"
            app:layout_constraintRight_toRightOf="@+id/select_BG"
            android:layout_marginTop="38px"
            android:layout_marginRight="40px"
            android:layout_marginEnd="40px" />
        <ListView
            android:id="@+id/select_ScrollView"
            android:layout_width="1000px"
            android:layout_height="950px"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_Title"
            android:layout_marginTop="50px"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>